{
	"general": {
		"preferredEditor": "neovim",
		"vimMode": false,
		"checkpointing": {
			"enabled": true
		}
	},
	"ui": {
		"theme": "Default",
		"hideWindowTitle": true,
		"hideTips": true,
		"hideBanner": true,
		"hideFooter": false,
		"showMemoryUsage": true,
		"showLineNumbers": true,
		"showCitations": true,
		"accessibility": {
			"disableLoadingPhrases": true
		}
	},
	"model": {
		"summarizeToolOutput": {
			"run_shell_command": {
				"tokenBudget": 2000
			}
		}
	},
	"context": {
		"contextFileName": [
			"GEMINI.MD",
			"AGENTS.MD"
		]
	},
	"tools": {
		"excludeTools": [
			"find_and_replace",
			"read_file",
			"write_file",
			"list_files"
		]
	},
	"mcp": {
		"allowed": [
			"serena",
			"shadcn"
		]
	},
	"mcpServers": {
		"serena": {
			"command": "uv",
			"args": [
				"run",
				"--directory",
				"{{ if eq .chezmoi.os "windows" }}$HOME\\mcp-server\\serena{{ else }}$HOME/mcp-server/serena{{ end }}",
				"serena",
				"start-mcp-server"
			],
			"timeout": 30000
		},
		"shadcn": {
			"command": "{{ if eq .chezmoi.os "windows" }}pnpm dlx{{ else }}npx{{ end }}",
			"args": [
				"shadcn@latest",
				"mcp"
			]
		}
	},
	"security": {
		"auth": {
			"selectedType": "oauth-personal"
		}
	}
}
