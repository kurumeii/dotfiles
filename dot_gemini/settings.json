{
	"general": {
		"preferredEditor": "neovim",
		"vimMode": false,
		"checkpointing": {
			"enabled": true
		},
		"enablePromptCompletion": true
	},
	"ui": {
		"theme": "Default",
		"hideWindowTitle": true,
		"hideTips": true,
		"hideBanner": true,
		"hideFooter": false,
		"showMemoryUsage": true,
		"showLineNumbers": true,
		"showCitations": true,
		"accessibility": {
			"disableLoadingPhrases": false
		}
	},
	"model": {
		"summarizeToolOutput": {
			"run_shell_command": {
				"tokenBudget": 2000
			}
		}
	},
	"context": {
		"contextFileName": [
			"GEMINI.MD",
			"AGENTS.MD"
		]
	},
	"tools": {
		"shell": {
			"showColor": true
		}
	},
	"mcp": {
		"allowed": [
			"context7",
			"serena",
			"figma"
		]
	},
	"mcpServers": {
		"serena": {
			"httpUrl": "http//localhost:12345/mcp"
		},
		"shadcn": {
			"command": "npx",
			"args": [
				"shadcn@latest",
				"mcp"
			]
		},
		"context7": {
			"command": "npx",
			"args": [
				"-y",
				"@upstash/context7-mcp",
				"--api-key"
			],
			"env": {
				"api-key": "${secrets.CONTEXT_7_API_KEY}"
			}
		},
		"figma": {
			"command": "npx",
			"args": [
				"-y",
				"figma-developer-mcp",
				"--stdio"
			],
			"env": {
				"FIGMA_API_KEY": "${secrets.FIGAM_API_KEY}"
			}
		}
	},
	"security": {
		"auth": {
			"selectedType": "oauth-personal"
		}
	}
}
