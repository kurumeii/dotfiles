{
  "selectedAuthType": "oauth-personal",
  "theme": "Ayu",
  "preferredEditor": "neovim",
  "vimMode": true,
  "hideTip": true,
  "hideBanner": true,
  "contextFileName": ["GEMINI.MD", "AGENTS.MD"],
  "checkpointing": {
    "enabled": true
  },
  "summarizeToolOutput": {
    "run_shell_command": {
      "tokenBudget": 2000
    }
  },
  "hideTips": true,
  "showMemoryUsage": true,
  "showLineNumbers": true,
  "mcpServers": {
    "serena": {
      "command": "uv",
      "args": [
        "run",
        "--directory",
        "$HOME/mcp-server/serena",
        "serena",
        "start-mcp-server"
      ],
      "timeout": 30000
    }
  }
}
