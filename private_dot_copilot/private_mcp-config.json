{
	"mcpServers": {
		"figma": {
			"type": "local",
			"command": "npx",
			"tools": [
				"*"
			],
			"args": [
				"-y",
				"figma-developer-mcp",
				"--stdio"
			],
			"env": {
				"FIGMA_API_KEY": "$FIGMA_API_KEY"
			}
		},
		"serena": {
			"type": "local",
			"command": "uv",
			"tools": [
				"*"
			],
			"args": [
				"run",
				"--directory",
				"$HOME/serena-mcp",
				"serena-mcp-server"
			]
		},
		"shadcn": {
			"type": "local",
			"command": "npx",
			"tools": [
				"*"
			],
			"args": [
				"shadcn@latest",
				"mcp"
			]
		},
		"context-7": {
			"type": "local",
			"command": "npx",
			"tools": [
				"*"
			],
			"args": [
				"-y",
				"@upstash/context7-mcp"
			],
			"env": {
				"api-key": "$CONTEXT_7_API_KEY"
			}
		}
	}
}
