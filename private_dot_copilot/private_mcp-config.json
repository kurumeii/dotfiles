{
	"mcpServers": {
		"figma": {
			"tools": [
				"*"
			],
			"type": "local",
			"command": "npx",
			"args": [
				"-y",
				"figma-developer-mcp",
				"--stdio"
			],
			"env": {
				"FIGMA_API_KEY": "$FIGMA_API_KEY"
			}
		},
		"shadcn": {
			"tools": [
				"*"
			],
			"type": "local",
			"command": "npx",
			"args": [
				"shadcn@latest",
				"mcp"
			]
		},
		"context-7": {
			"tools": [
				"*"
			],
			"type": "local",
			"command": "npx",
			"args": [
				"-y",
				"@upstash/context7-mcp"
			],
			"env": {
				"api-key": "$CONTEXT_7_API_KEY"
			}
		},
		"serena-http": {
			"tools": [
				"*"
			],
			"type": "http",
			"url": "http://localhost:12345/mcp",
			"headers": {}
		},
		"tavily": {
			"type": "http",
			"url": "https://mcp.tavily.com/mcp",
			"headers": {
				"Authorization": "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"
			},
			"tools": [
				"*"
			]
		}
	}
