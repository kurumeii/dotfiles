{
	"$schema": "https://opencode.ai/config.json",
	"theme": "gruvbox",
	"tui": {
		"scroll_speed": 3
	},
	"snapshot": true,
	"username": "Andrew nguyen",
	"instructions": [
		".github/copilot-instructions.md",
		"AGENTS.md"
	],
	"mcp": {
		"serena": {
			"type": "local",
			"enabled": true,
			"command": [
				"uv",
				"run",
				"--directory",
				"{env:HOME}/mcp-server/serena",
				"serena",
				"start-mcp-server"
			]
		},
		"shadcn": {
			"type": "local",
			"enabled": true,
			"command": [
				"npx",
				"-y",
				"mcp-remote",
				"https://www.shadcn.io/api/mcp"
			]
		}
	}
}
